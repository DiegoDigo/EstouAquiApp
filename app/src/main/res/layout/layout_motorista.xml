<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/textBranco"
    cardView:cardCornerRadius="10dp"
    cardView:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="8dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            android:textColor="#000"
            android:id="@+id/txtComentario"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/card_conteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ£o Paulo - SP"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/nomeMotorista"
                android:layout_alignStart="@+id/nomeMotorista" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/customRatingBar.style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="1"
                android:stepSize="1"
                android:theme="@style/customRatingBar"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:layout_above="@+id/cidade"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/nomeMotorista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Motorista"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_above="@+id/ratingBar"
                android:layout_toLeftOf="@+id/ratingBar"
                android:layout_toStartOf="@+id/ratingBar"
                android:layout_marginBottom="9dp" />

        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>