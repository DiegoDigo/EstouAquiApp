<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/textBranco"
    cardView:cardCornerRadius="3dp"
    cardView:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:id="@+id/img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/nomeMotorista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Motorista"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="9dp" />

            <TextView
                android:id="@+id/cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ£o Paulo - SP"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@+id/nomeMotorista"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="Tipo Veiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cidade"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/txtTipoVeiculo" />


            <TextView
                android:text="Disponivel : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/Diposnivel"
                android:layout_marginRight="39dp"
                android:layout_marginEnd="39dp"
                android:layout_alignBaseline="@+id/txtTipoVeiculo"
                android:layout_alignBottom="@+id/txtTipoVeiculo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:id="@+id/lugarDiposnivel"
                android:layout_alignBaseline="@+id/Diposnivel"
                android:layout_alignBottom="@+id/Diposnivel"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="21dp"
                android:layout_marginEnd="21dp" />

            <RatingBar
                android:id="@+id/avaliacao"
                style="@style/customRatingBar.style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/customRatingBar"
                android:numStars="5"
                android:stepSize="1"
                android:layout_gravity="end|right"
                android:layout_alignBottom="@+id/nomeMotorista"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="8dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignBottom="@+id/txtComentario"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textColor="#000"
                android:id="@+id/txtComentario"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="80dp"
                android:layout_marginEnd="80dp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>